<div class="container">
  <div class="row">
    <div class="col-sm-11 offset-sm-1">
      <h2 class="m-4">新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f| %>
      <%# <%= render "user/users/shared/error_messages", resource: resource %> 
      <div class="row">
        <table>
          <tr>
            <div class="field">
              <td class="p-2"><%= f.label "名前" %></td>
              <td class="p-2"><%= f.label "(姓)", class:"first_name" %></td>
              <td class="p-2"><%= f.text_field :first_name, placeholder: "山田" %></td>
              <td class="p-2"><%= f.label "(名)" %></td>
              <td class="p-2"><%= f.text_field :last_name, placeholder: "花子" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td class="p-2"><%= f.label "フリガナ" %></td>
              <td class="p-2"><%= f.label "(セイ)", class:"first_name_kana" %></td>
              <td class="p-2"><%= f.text_field :first_name_kana, placeholder: "ヤマダ" %></td>
              <td class="p-2"><%= f.label "(メイ)" %></td>
              <td class="p-2"><%= f.text_field :last_name_kana, placeholder: "ハナコ" %></td>
            </div>
          </tr>
          <tr>
            <div class="field"><br>
              <td class="p-2"><%= f.label "メールアドレス" %></td>
              <td class="p-2"></td>
              <td class="p-2"><%= f.email_field :email, autofocus: true, autocomplete: "email"%></td>
            </div>
          </tr>

          <tr>
            <div class="field"><br>
              <td class="p-2"><%= f.label "パスワード" %></td>
              <td class="p-2"></td>
              <td class="p-2"><%= f.password_field :password, autocomplete: "new-password" %><br></td>
            </div>
            </td>
          </tr>
          <tr>
            <div class="field"><br>
              <td class="p-2"><%= f.label "パスワード（確認用）" %></td>
              <td class="p-2"></td>
              <td class="p-2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %><br></td>
            </div>
          </tr>
          <tr>
        </table>
      </div>

      <div class="row mb-5">
        <div class="col-sm-12">
          <div class="action-box">
            <div class="actions text-center mb-4"><br>
              <%= f.submit "新規登録", class: "btn btn-success btn-lg w-25" %>
            </div>
            <h3>既に登録済みの方</h3>
            <span class="ml-5"><%= link_to "こちら", new_user_session_path %>からログインしてください。</span>
          </div>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>
